{
  "compilerOptions": {
    "lib": ["es2023", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    "outDir": "dist",
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "composite": true
  }
}
