{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/samples/http-mcp-bridge/tsp-output/cs-server/bin/Debug/net8.0/Mcp.dll",
      "args": ["--transport", "sse"],
      "cwd": "${workspaceFolder}/samples/http-mcp-bridge/tsp-output/cs-server",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Attach to MCP Server",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
