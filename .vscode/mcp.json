{
  "inputs": [
    {
      "type": "promptString",
      "id": "githubToken",
      "description": "Github token",
      "password": true
    }
  ],
  "servers": {
    "TypeSpec Github JS": {
      "command": "node",
      "args": ["${workspaceFolder}/samples/http-mcp-bridge/dist/tsp-output/js-server/main.js"],
      "env": {
        "TOKEN": "${input:githubToken}"
      }
    },
    "Sample: Github CS": {
      "command": "dotnet",
      "args": ["run", "--project", "${workspaceFolder}/samples/http-mcp-bridge/tsp-output/cs-server/Mcp.csproj"],
      "env": {
        "TOKEN": "${input:githubToken}"
      }
    },
    "Sample: Azure Dashboard CS": {
      "command": "dotnet",
      "args": ["run", "--project", "${workspaceFolder}/samples/azure-service/tsp-output/cs-server/Mcp.csproj"],
      "env": {
        "AZURE_ENDPOINT": "http://localhost:30001"
      }
    },
    "Vector CSharp": {
      "command": "dotnet",
      "args": ["run", "--project", "${workspaceFolder}/samples/vector-cs/Mcp.csproj"]
    }
  }
}
